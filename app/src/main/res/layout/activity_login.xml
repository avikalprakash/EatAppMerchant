<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Merchant App"
            android:textColor="#000000"
            android:textSize="20dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_pre"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="180dp"
            android:id="@+id/relativeUsername">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:id="@+id/Username_txt"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:layout_marginRight="45dp"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:maxLength="40"
                android:backgroundTint="@android:color/transparent"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/profilee"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_pre"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:id="@+id/relativePass"
            android:layout_below="@+id/relativeUsername">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/Password_txt"
                android:textColorHint="#000000"
                android:layout_marginRight="45dp"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:maxLength="40"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:backgroundTint="@android:color/transparent"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/lock"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativePass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/login"
            android:text="LOGIN"
            android:textColor="#ffffff"
            android:background="#FF0033"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:layout_below="@+id/login"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#000000"/>

    </RelativeLayout>
</RelativeLayout>